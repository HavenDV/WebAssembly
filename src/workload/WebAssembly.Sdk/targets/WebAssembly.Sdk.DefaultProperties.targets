<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <WebAssemblyApplication Condition=" '$(WebAssemblyApplication)' == '' And '$(OutputType)' == 'Exe' ">true</WebAssemblyApplication>
    <WebAssemblyApplication Condition=" '$(WebAssemblyApplication)' == '' ">false</WebAssemblyApplication>
    <EnableImplicitRuntimeIdentifiers Condition=" '$(EnableImplicitRuntimeIdentifiers)' == '' And '$(UseMaui)' == 'true' ">true</EnableImplicitRuntimeIdentifiers>
    <EnableImplicitRuntimeIdentifiers Condition=" '$(EnableImplicitRuntimeIdentifiers)' == '' ">false</EnableImplicitRuntimeIdentifiers>
    <!-- Set the default RuntimeIdentifier if not already specified. -->
    <RuntimeIdentifier Condition=" '$(EnableImplicitRuntimeIdentifiers)' == 'true' And '$(RuntimeIdentifier)' == '' And '$(RuntimeIdentifiers)' == '' ">webassembly-x86</RuntimeIdentifier>
    <UseAppHost>false</UseAppHost>
    <_RuntimeIdentifierUsesAppHost>false</_RuntimeIdentifierUsesAppHost>
  </PropertyGroup>

  <PropertyGroup>
    <_IsWebAssemblyDefined>$([System.Text.RegularExpressions.Regex]::IsMatch('$(DefineConstants.Trim())', '(^|;)__WEBASSEMBLY__($|;)'))</_IsWebAssemblyDefined>
    <DefineConstants Condition="!$(_IsWebAssemblyDefined)">__WEBASSEMBLY__;$(DefineConstants)</DefineConstants>
  </PropertyGroup>

</Project>
